<!DOCTYPE html>
<html lang="fr" class="">
<head>
    {# Dark mode — must run before first paint to avoid flash #}
    <script>
        (function () {
            var stored = localStorage.getItem('theme');
            var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (stored === 'dark' || (!stored && prefersDark)) {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8">
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} — {{ siteTitle }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}">
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    {% block stylesheets %}
        {{ vite_entry_link_tags('theme') }}
    {% endblock %}
</head>

<body>

<div data-controller="sidebar" class="flex h-screen overflow-hidden bg-background text-foreground">

    {# Mobile overlay #}
    <div
        data-sidebar-target="overlay"
        class="hidden fixed inset-0 z-40 bg-black/60 backdrop-blur-sm lg:hidden"
        data-action="click->sidebar#close"
    ></div>

    {% block sidebar %}{% endblock %}

    <main class="flex-1 flex flex-col overflow-hidden min-w-0">
        {% set headerActions = block('mainHeaderActions') is defined ? block('mainHeaderActions') : '' %}
        <twig:SFUIToolbox:Layout:MainHeader title="{{ block('title') }}" actions="{{ headerActions }}" />

        <div class="flex-1 overflow-auto p-6 lg:p-10 space-y-8">
            {% block body %}{% endblock %}
        </div>
    </main>

</div>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <twig:SFUIToolbox:Generic:Toast message="{{ message }}" type="{{ type }}"/>
    {% endfor %}
{% endfor %}

{% block javascripts %}
    {{ vite_entry_script_tags('theme') }}
{% endblock %}

</body>
</html>