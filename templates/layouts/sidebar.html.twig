<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8">
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} â€” {{ siteTitle }}</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}">

    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>

    {% block stylesheets %}
        {{ vite_entry_link_tags('theme') }}
    {% endblock %}
</head>

<body class="text-slate-700 min-h-screen flex {{ app.request.attributes.get('_route') }}">

{% block sidebar %}{% endblock %}

<main class="flex-1 flex flex-col overflow-hidden">
    {% set headerActions = block('mainHeaderActions') is defined ? block('mainHeaderActions') : '' %}
    <twig:SFUIToolbox:Layout:MainHeader title="{{ block('title') }}" actions="{{ headerActions }}" />

    <div class="flex-1 overflow-auto bg-softGray p-10">
        <div class="max-w-7xl mx-auto space-y-8">
            {% block body %}{% endblock %}
        </div>
    </div>
</main>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <twig:SFUIToolbox:Generic:Toast message="{{ message }}" type="{{ type }}"/>
    {% endfor %}
{% endfor %}

{% block javascripts %}
    {{ vite_entry_script_tags('theme') }}
{% endblock %}

</body>
</html>