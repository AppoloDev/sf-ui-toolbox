<!DOCTYPE html>
<html lang="fr" class="">
<head>
    <script>
        (function () {
            var stored = localStorage.getItem('theme');
            var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (stored === 'dark' || (!stored && prefersDark)) {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8">
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} — {{ siteTitle }}</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}">

    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>

    {% block stylesheets %}
        {{ vite_entry_link_tags('theme') }}
    {% endblock %}
</head>

<body class="bg-background text-foreground {{ app.request.attributes.get('_route') }}">

<div class="min-h-screen flex">

    {# ── Panneau de marque gauche (masqué sur mobile) ── #}
    <div class="hidden lg:flex lg:w-[45%] xl:w-1/2 bg-primary flex-col items-center justify-center p-12 relative overflow-hidden select-none">
        <div class="absolute -top-20 -left-20 size-72 rounded-full bg-white/10"></div>
        <div class="absolute -bottom-32 -right-12 size-[26rem] rounded-full bg-white/10"></div>
        <div class="absolute top-1/3 -right-10 size-40 rounded-full bg-white/5"></div>

        <div class="relative z-10 text-center text-white max-w-xs">
            {% block branding %}
                <a href="/" class="inline-block mb-10">
                    {% block branding_logo %}
                        <img src="{{ asset('assets/images/logo.png') }}" alt="{{ siteTitle }}" class="h-14 mx-auto brightness-0 invert"/>
                    {% endblock %}
                </a>
                <h2 class="text-3xl font-bold mb-4 leading-tight">
                    {% block branding_title %}{{ siteTitle }}{% endblock %}
                </h2>
                <p class="text-white/65 text-base leading-relaxed">
                    {% block branding_description %}{% endblock %}
                </p>
            {% endblock %}
        </div>
    </div>

    {# ── Panneau formulaire ── #}
    <div class="flex-1 flex flex-col items-center justify-center px-6 py-12">
        {# Logo visible uniquement sur mobile #}
        <div class="mb-8 lg:hidden">
            <a href="/">
                <img src="{{ asset('assets/images/logo.png') }}" alt="{{ siteTitle }}" class="h-10"/>
            </a>
        </div>

        <div class="w-full max-w-sm">
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-foreground">{{ block('title') }}</h1>
                {% block subtitle %}{% endblock %}
            </div>

            {% block language_switcher %}{% endblock %}
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <twig:Toast message="{{ message }}" type="{{ type }}"/>
    {% endfor %}
{% endfor %}

{% block javascripts %}
    {{ vite_entry_script_tags('theme') }}
{% endblock %}

</body>
</html>