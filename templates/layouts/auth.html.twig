<!DOCTYPE html>
<html lang="fr" class="">
<head>
    <script>
        (function () {
            var stored = localStorage.getItem('theme');
            var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (stored === 'dark' || (!stored && prefersDark)) {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8">
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} â€” {{ siteTitle }}</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}">

    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>

    {% block stylesheets %}
        {{ vite_entry_link_tags('theme') }}
    {% endblock %}
</head>

<body class="bg-background text-foreground {{ app.request.attributes.get('_route') }}">

<div class="min-h-screen flex flex-col items-center justify-center px-4 py-8">
    <div class="mb-8">
        {% block logo %}
            <a href="{{ path('home') }}">
                <img src="{{ asset('assets/images/logo.svg') }}" alt="{{ siteTitle }}" class="h-16 dark:brightness-0 dark:invert"/>
            </a>
        {% endblock %}
    </div>

    <div class="w-full max-w-sm bg-card rounded-2xl shadow-xl dark:shadow-none dark:ring-1 dark:ring-border">
        <div class="p-8">
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-foreground">{{ block('title') }}</h1>
                {% block subtitle %}{% endblock %}
            </div>

            {% block language_switcher %}{% endblock %}

            {% block body %}{% endblock %}
        </div>
    </div>
</div>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <twig:Toast message="{{ message }}" type="{{ type }}"/>
    {% endfor %}
{% endfor %}

{% block javascripts %}
    {{ vite_entry_script_tags('theme') }}
{% endblock %}

</body>
</html>
