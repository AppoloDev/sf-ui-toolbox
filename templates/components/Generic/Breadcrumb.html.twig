<div class="flex items-center justify-between mb-10">
    <ol class="flex items-center gap-2 text-sm text-subtitle flex-wrap" aria-label="Breadcrumb">
        {% for item in items %}
            {% if item is not empty %}
                <li class="flex items-center gap-2">
                    {% if not loop.last %}
                        <a href="{{ item.path }}" class="text-subtitle hover:text-title transition-colors">{{ item.label|raw }}</a>
                        <twig:ux:icon name="fa6-solid:chevron-right" class="h-3 w-3 text-subtitle/50" />
                    {% else %}
                        <span class="text-title font-medium" aria-current="page">{{ item.label|raw }}</span>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
    </ol>

    {% block breadcrumbActions %}{% endblock %}
</div>