{# @prop variant 'default'|'secondary'|'destructive'|'outline'|'gray'|'green'|'red'|'blue'|'yellow'|'orange'|'indigo'|'appolo' The variant, default to `default` #}
{# @prop color 'gray'|'green'|'red'|'blue'|'yellow'|'orange'|'indigo'|'appolo' Shorthand mapped to variant #}
{# @prop label Optional label string (backward-compat, prefer slot content) #}
{# @block content The default block #}
{%- props variant = 'default', color = null, label = null -%}
{%- set resolvedVariant = color is not null ? color : variant -%}
{%- set style = html_cva(
    base: 'inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2',
    variants: {
        variant: {
            default: 'border-transparent bg-primary text-primary-foreground',
            secondary: 'border-transparent bg-secondary text-secondary-foreground',
            destructive: 'border-transparent bg-destructive text-destructive-foreground',
            outline: 'text-foreground',
            gray: 'border-transparent bg-gray-100 text-gray-700',
            green: 'border-transparent bg-green-100 text-green-700',
            red: 'border-transparent bg-red-100 text-red-700',
            blue: 'border-transparent bg-blue-100 text-blue-700',
            yellow: 'border-transparent bg-yellow-100 text-yellow-700',
            orange: 'border-transparent bg-orange-100 text-orange-700',
            indigo: 'border-transparent bg-indigo-100 text-indigo-700',
            appolo: 'border-transparent bg-primary/10 text-primary',
        },
    },
) -%}
<div
    class="{{ style.apply({variant: resolvedVariant}, attributes.render('class'))|tailwind_merge }}"
    {{ attributes }}
>
    {%- if label is not null %}{{ label }}{% else %}{%- block content %}{% endblock -%}{% endif -%}
</div>