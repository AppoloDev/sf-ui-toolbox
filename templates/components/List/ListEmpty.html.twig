{# @prop title Empty state title #}
{# @prop description Empty state description #}
{# @block ListEmptyIllustration Override the illustration #}
{# @block ListEmptyButton Slot for action button #}
{%- props title = 'Aucun résultat.', description = "Essayez d'ajouter un nouvel élément." -%}
<twig:SFUIToolbox:Generic:Empty>
    <twig:block name="content">
        <twig:SFUIToolbox:Generic:Empty:Media>
            <twig:block name="content">
                {%- block ListEmptyIllustration -%}
                    {{ source('@SFUIToolbox/illustrations/list_empty.svg') }}
                {%- endblock -%}
            </twig:block>
        </twig:SFUIToolbox:Generic:Empty:Media>
        <twig:SFUIToolbox:Generic:Empty:Content>
            <twig:block name="content">
                <twig:SFUIToolbox:Generic:Empty:Header>
                    <twig:block name="content">
                        {% if title is not empty %}
                            <twig:SFUIToolbox:Generic:Empty:Title>{{ title }}</twig:SFUIToolbox:Generic:Empty:Title>
                        {% endif %}
                        {% if description is not empty %}
                            <twig:SFUIToolbox:Generic:Empty:Description>{{ description }}</twig:SFUIToolbox:Generic:Empty:Description>
                        {% endif %}
                    </twig:block>
                </twig:SFUIToolbox:Generic:Empty:Header>
                {%- block ListEmptyButton %}{% endblock -%}
            </twig:block>
        </twig:SFUIToolbox:Generic:Empty:Content>
    </twig:block>
</twig:SFUIToolbox:Generic:Empty>